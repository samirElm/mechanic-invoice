<div class="container">
  <%= simple_form_for(@invoice, url: users_invoices_path) do |f| %>
    <%= f.error_notification %>

    <%= f.input :customer_id, required: true, autofocus: true %>
    <%= f.input :description_mo, required: true, autofocus: true %>
    <%= f.input :time_mo, required: true, autofocus: true %>

    <%= f.button :submit, "Ajouter", class: "btn btn-primary" %>
  <% end %>
</div>